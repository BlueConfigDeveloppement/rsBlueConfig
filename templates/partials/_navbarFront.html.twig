        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-bell fa-2x"></i><span class="badge bg-danger">0</span>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#">Message 1</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Alerte 1</a></li>
                </ul>
            </li>
            <li class="nav-item dropdown">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <a class="dropdown-toggle nav-link" aria-expanded="false" data-bs-toggle="dropdown" href="#">
                        {% if app.user.userProfil %}
                            {% if app.user.userProfil.avatar %}
                                <img class="user-avatar md-avatar rounded-circle" style="width: 35px; height: 35px" alt="{{ app.user.userProfil.fullName }}" src="{{ vich_uploader_asset(app.user.userProfil, 'imageFile') }}">
                            {% else %}
                                {% if app.user.userProfil.civil == 'Mr.' %}
                                    <img class="user-avatar md-avatar rounded-circle" style="width: 35px; height: 35px" alt="{{ app.user.userProfil.fullName }}" src="{{ asset('images/avatar/avatar-homme.png') }}">
                                {% else %}
                                    <img class="user-avatar md-avatar rounded-circle" style="width: 35px; height: 35px" alt="{{ app.user.userProfil.fullName }}" src="{{ asset('images/avatar/avatar-femme.png') }}">
                                {% endif %}
                            {% endif %}
                            {{ app.user.userProfil.fullName }}
                        {% else %}
                            {{ app.user.email }}
                        {% endif %}
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('profile') }}">Mon Profil</a>
                        <a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="dropdown-item" href="{{ path('back_office') }}">Administration</a>
                        {% endif %}
                    </div>

                {% else %}
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
